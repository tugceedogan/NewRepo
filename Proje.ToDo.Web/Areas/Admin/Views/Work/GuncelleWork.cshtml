@model WorkUpdateViewModel 
@{
    ViewData["Title"] = "GuncelleWork";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="GuncelleWork" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label>Ad:</label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama:</label>
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
        <textarea type="" asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>profil durumu seçiniz:</label>
        <span asp-validation-for="@Model.ProfilId" class="text-danger"></span>
        <select asp-for="@Model.ProfilId" class="form-control" asp-items="ViewBag.Profils">
            <option hidden value="-1">seçiniz </option>
        </select><br />
        <button type="submit" class="btn btn-info btn-sm">Kaydet</button>
    </div>
</form>

@section JavaScript{

    <script src="~/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}